doctype html
html(class="no-js", lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(content="IE=edge", http-equiv="X-UA-Compatible")
      meta(content="width=device-width, initial-scale=1, user-scalable=0", name="viewport")
      meta(name='description', content='Through sustainable development, the United Nations Development Programme (UNDP) works to eradicate poverty and reduce inequalities in some 170 countries and territories.')
      meta(name='keywords', content='UNDP')
      meta(name='theme-color', content='#006BB6')
      meta(name='msapplication-TileColor', content='#006BB6')
      meta(name='msapplication-TileImage', content='/ms-icon-144x144.png')
      title UNDP - United Nations Development Programme
      link(rel='stylesheet', href="styles/main.css")
      link(rel='apple-touch-icon', href='/apple-touch-icon.png')
      link(rel='icon', href='/favicon.ico')
      //[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script> <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]
  body.undp-work
    //[if (lt IE 9) & (!IEMobile)]> <p class="browsehappy">Você está usando um <strong>navegador antigo</strong>. Por favor <a href="http://browsehappy.com/">atualize o seu navegador</a> para uma boa experiência.</p> <![endif]
    //header starts
    block header
      header.undp-header.country-header
        .container
          a.box-logo.pull-left(href='/')
          .box-right.clearfix
            .pull-right.menu-right-xs
              block search
                include ../inc/search_country
              a.menubar.hidden-lg(href='javascript:void(0);',data-sidemenu)
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .pull-left.hidden-md.hidden-sm.hidden-xs.pos-top
              ul.list-inline.list-language
                li.active
                  a(href='javascript:void(0);') BHS
                li
                  a(href='javascript:void(0);') English
              h3.country-heading
                span United Nations in
                |Bosnia and Herzegovina

              block mainnav
                //main navigation starts
                ul.list-main-nav
                  li.development-goals
                    a(href='javascript:void(0);') Our Work
                  li.about-bosnia
                    a(href='javascript:void(0);') UN Agencies
                  li.our-work
                    a(href='javascript:void(0);') SDGs
                  li.about-bosnia
                    a(href='javascript:void(0);') News
                  li.our-work
                    a(href='javascript:void(0);') Floods Recovery
                  li.our-work
                    a(href='javascript:void(0);') Our Stories
                //main navigation ends
            h3.country-heading.visible-md.visible-sm.visible-xs.col-md-8.col-sm-6.col-xs-10
              span United Nations in
              | Bosnia and Herzegovina
    //header ends
    //content starts
    block content
      h1 Identity
    //content ends
    //footer starts
    block footer
      include ./../inc/footer2.jade
    //footer ends
    block slidemenu
      include ./../inc/slide_menu
    block scripts
      script(src='scripts/vendors.min.js')
      script(src='scripts/scripts.js')
