    .col-md-4.col-sm-12.com-xs-12
        h4 Popover
        button.btn.btn-link(type="button" data-trigger="focus" data-container="body" data-toggle="popover" data-placement="left" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus." data-original-title="" title="") Left

